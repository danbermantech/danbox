{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "$components/*": ["./components/*"],
      "$assets/*": ["./assets/*"],
      "$store/*": ["./store/*"],
      "$hooks/*": ["./hooks/*"],
      "$contexts/*": ["./contexts/*"],
      "$utils/*": ["./utils/*"],
    }
  },
  "include": ["vite.config.ts"]
}
